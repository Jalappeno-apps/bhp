<%= form_tag spree.products_path, method: :get, class: "py-md-1 mt-1 d-flex align-items-center" do %>
  <div>
    <i class="m-0">
      <%= icon(name: 'search',
              classes: 'search_icon d-md-none',
              width: 20,
              height: 20) %>
      <%= icon(name: 'search',
              classes: 'search_icon d-none d-md-inline',
              width: 27,
              height: 27) %>
    </i>
    <%= search_field_tag :keywords,
                        params[:keywords],
                        placeholder: Spree.t(:search),
                        autofocus: true,
                        class: "search-field p-3" %>
  </div>
<% end %>


<style>
  .search_icon{
    position: relative;
    float: right;
    top: 16px;
    right: 43px;
    color: #EC003B;
  }

  .search-field {
    border: 3px solid #EC003B;
    border-radius: 10px;
  }
</style>
