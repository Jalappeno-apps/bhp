<% @body_id = 'home' %>

<div class="container header-spree-fluid">
  <div class="homepage-hero-image mb-3 position-relative">
    <% if @hero_images.empty? %>
        <img class="lazyload hero-image position-absolute"
          data-src="<%= asset_path('homepage/main_banner.jpg') %>"
          data-srcset="<%= image_source_set('homepage/main_banner') %>"
          alt="<%= Spree.t('homepage.main_banner')%>" />
    <% else %>
      <%# Remove the first(1) to iterate over all images %>
      <% @hero_images.first(1).each do |image| %>
        <%= image_tag image,
          class: 'lazyload hero-image position-absolute',
          'data-src': image,
          'data-srcset': image,
          alt: Spree.t('homepage.main_banner')
        %>
      <% end %>
    <% end %>

    <div class="hero-content">
      <div class="head-text">
      </div>
      <div>
        <%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn-primary spree-btn px-5', style: 'color: rgb(236, 0, 59);' %>
      </div>
    </div>
  </div>
  <div class="row mt-5 mb-5">
    <div class="d-flex justify-content-center align-items-center flex-column col-md-3 col-6">
      <%= image_tag('custom/pl', class: 'homepage-image-exp') %>
      <h6 class="homepage-text-exp"><%= Spree.t('homepage.produced_in')%></h6>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column col-md-3 col-6">
      <%= image_tag('custom/payments', class: 'homepage-image-exp') %>
      <h6 class="homepage-text-exp"><%= Spree.t('homepage.safe_pay')%></h6>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column col-md-3 col-6">
      <%= image_tag('custom/delivery', class: 'homepage-image-exp') %>
      <h6 class="homepage-text-exp"><%= Spree.t('homepage.reliable_delivery')%></h6>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column col-md-3 col-6">
      <%= image_tag('custom/returns', class: 'homepage-image-exp') %>
      <h6 class="homepage-text-exp"><%= Spree.t('homepage.returns')%></h6>
    </div>
  </div>

  <!-- <div data-product-carousel data-product-carousel-taxon-id='free-shipping' class="mb-3"></div> -->

