<div class="row align-items-center  border-bottom">
  <%= link_to admin_hero_images_path do %>
    <%= image_tag 'icons/left_arrow.svg', width: '24px', class: 'mr-2 icon-hover'%>
  <% end %>

  <h1 class="contextual-title px-0 mb-0 col">
      <%= I18n.t("new_image", scope: ['spree', 'admin']) %>
  </h1>
</div>

<%= form_for(@hero_image, url: admin_hero_images_path) do |f| %>
  <% if @hero_image.image.attached? %>
    <%= image_tag main_app.url_for(@hero_image.image), class: 'image-90 m-2' %>
  <% end %>

  <div class="mt-2">
    <%= f.label :image %>
  </div>

  <div class="mt-2">
    <%= f.file_field :image %>
  </div>

  <div style="display: block;text-align: center;padding-top: 8vh">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<style>
  .icon-hover {
    transition: all 0.25s ease;
  }

  .icon-hover:hover {
    cursor: pointer;
    filter: brightness(1.125);
  }
</style>
